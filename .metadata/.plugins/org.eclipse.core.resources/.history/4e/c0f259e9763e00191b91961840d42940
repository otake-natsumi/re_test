<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
"http://struts.apache.org/dtds/struts-2.3.dtd">

<!-- Strutsの詳細設定 -->
<struts>
	<constant name="struts.devMode" value="true" />

<!-- 対象のpackageを設定 -->
	<package name="com.corvadev.illustsite.action" extends="struts-default">

	<!-- ContactAction -->
		<action name="ContactAction" class="com.corvadev.illustsite.action.ContactAction" method="execute">
			<result name="success">contact.jsp</result>
		</action>

	<!-- ContactConfirmAction -->
		<action name="ContactConfirmAction" class="com.corvadev.illustsite.action.ContactConfirmAction" method="execute">
			<result name="success">contactConfirm.jsp</result>
		</action>

	<!-- ContactCompleteAction -->
		<action name="ContactCompleteAction" class="com.corvadev.illustsite.action.ContactCompleteAction" method="execute">
			<result name="success">contactComplete.jsp</result>
		</action>

	</package>
</struts>